<script>
function speak(){
 let msg=new SpeechSynthesisUtterance();
 msg.text=document.getElementById("tts").value;
 msg.lang="gu-IN";
 speechSynthesis.speak(msg);
}

function listen(){
 let r=new (window.SpeechRecognition||window.webkitSpeechRecognition)();
 r.lang="gu-IN";
 r.onresult=e=>{
 document.getElementById("stt").value=e.results[0][0].transcript;
 };
 r.start();
}
</script>

